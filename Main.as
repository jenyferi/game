package  {		import flash.display.MovieClip;	import View;        public class Main extends MovieClip {		private var _view:View;		private var _controller:Controller;		private var _model:Model;		        public function Main() {			setBackground();						_model = new Model();			_controller = new Controller(_model);            _view = new View(_controller, _model);						_model.createBoard();			_controller.addMouseEvents();			_view.displayBoard();			            addChild(_view);        }				private function setBackground():void {			var date:Date = new Date();			if (date.hours >= 20 || date.hours <= 5) {				day_bg.visible = false;				night_bg.visible = true;			}else {				day_bg.visible = true;				night_bg.visible = false;			}		}    }}